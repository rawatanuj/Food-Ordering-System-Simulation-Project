@model IEnumerable<Food_Ordering_System.Models.MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Items</h2>

@**<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Create New Item</a>
</p>
    **@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Price)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Active)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.DateOfLaunch)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FreeDelivery)
        </th>
    </tr>
    @foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>

            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.DisplayFor(m => item.Active)
            </td>
            <td>
                @Html.DisplayFor(m => item.DateOfLaunch)
            </td>
            <td>
                @Html.DisplayFor(m => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.FreeDelivery)
            </td>
        </tr>
    }

</table>